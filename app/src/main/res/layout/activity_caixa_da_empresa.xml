<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ajudamei.allan_arthur.com.ajuda_mei.caixa.registro.CaixaDaEmpresaActivity">

    <Button
        android:id="@+id/bt_pagamento_boleto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registrar Pagamento Boleto/Convênio"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="26dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_venda_produto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registrar Venda de Produto"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/bt_entrada_recursos"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="48dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/bt_entrada_recursos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registrar Entrada de Recursos"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/bt_aquisicao_mat_prima"
        app:layout_constraintRight_toRightOf="@+id/bt_venda_produto"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/bt_venda_produto" />

    <Button
        android:id="@+id/bt_aquisicao_mat_prima"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Registrar Aquisição de Matéria-prima"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/bt_entrada_recursos"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="80dp"
        app:layout_constraintLeft_toLeftOf="@+id/bt_entrada_recursos" />
</android.support.constraint.ConstraintLayout>
