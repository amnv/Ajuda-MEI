<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ajudamei.allan_arthur.com.ajuda_mei.empregados.EmpregadosActivity">

    <Button
        android:id="@+id/bt_lista_empregados"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lista de Empregados"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_conheca_os_direitos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ConheÃ§a os Direitos Deles"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_lista_empregados"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/bt_calcular_custo_empregado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Calcule o Custo do Empregado"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/bt_conheca_os_direitos"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_conheca_os_direitos"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/bt_conheca_os_direitos" />
</android.support.constraint.ConstraintLayout>
